{
    "$schema": "http://json-schema.org/draft-06/schema",
    "title": "Grades Tracker",
    "type": "object",
    "required": [
        "Code"
    ],
    "additionalProperties": false,
    "properties": {
        "Code": {
            "description": "A course code",
            "type": "string",
            "pattern": "^[A-Z]{4}-[0-9]+$"
        },
        "Evaluations": {
            "type": "array",
            "items": {
                "required": [
                    "Description",
                    "Weight",
                    "OutOf",
                    "EarnedMarks"
                ],
                "additionalProperties": false,
                "type": "object",
                "properties": {
                    "Description": {
                        "description": "A description of the evaluation",
                        "type": "string"
                    },
                    "Weight" : {
                        "description" : "The % of the course mark attributed to the evaluation",
                        "type" : "number",
                        "minimum" : 0,
                        "maximum" : 100
                    },
                    "OutOf" : {
                        "description" : "The number of marks that represents a perfect score on the evaluation",
                        "type" : "integer",
                        "minimum" : 0
                    },
                    "EarnedMarks" : {
                        "description" : "The studentâ€™s score on the evaluation",
                        "type" : [ "number", "null" ],
                        "minimum" : 0
                    }
                }
            }
        }
    }
}
